{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",

    "paths": {
      "@routes": ["api/routes"],
      "@types": ["api/types"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.mjs",
    "**/*.tsx",
    "prisma/seed.js",
    "**/*.js",
    ".eslintrc.cjs",
    "src/**/*",
  ],
  "exclude": ["node_modules"],
}
